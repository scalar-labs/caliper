{
  "caliper" : {
    "blockchain": "scalardl",
    "command" : {
      "start": "/bin/sh network/scalardl/scripts/up.sh docker-compose.yml 30",
      "end" : "/bin/sh network/scalardl/scripts/down.sh docker-compose.yml"
    }
  },
  "contract": { "path": "src/contract/scalardl" },
  "scalardl": {
    "network": {
      "client_properties": {
        "host": "localhost",
        "port": "50051",
        "cert_holder_id": "test",
        "cert_version": 1,
        "cert_path": "network/scalardl/certs/client.pem",
        "private_key_path": "network/scalardl/certs/client-key.pem",
        "tls_enabled": false
      }
    },
    "contracts": [
      {
        "id": "SimpleOpen",
        "name": "com.example.contract.simple.SimpleOpen",
        "fcn": "open",
        "path": "build/classes/java/main/com/example/contract/simple/SimpleOpen.class"
      },
      {
        "id": "SimpleQuery",
        "name": "com.example.contract.simple.SimpleQuery",
        "fcn": "query",
        "path": "build/classes/java/main/com/example/contract/simple/SimpleQuery.class"
      },
      {
        "id": "SimpleTransfer",
        "name": "com.example.contract.simple.SimpleTransfer",
        "fcn": "transfer",
        "path": "build/classes/java/main/com/example/contract/simple/SimpleTransfer.class"
      }
    ]
  }
}
